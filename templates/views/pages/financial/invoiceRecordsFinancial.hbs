<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Test Reports</title>

  <!-- <link rel="stylesheet" href="css/sidemenu.css"> -->
  {{!--
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <link rel="stylesheet" href="css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script> --}}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}

  {{> navbar userImg=data.userImage }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> financialSidebar userImg=data.userImage }}
      </div>

      <div class="col-8 mx-0">
        <div class="container-fluid my-4">
          <h1>Generate Invoice List</h1>
          <hr>
          <div class="row">
            <div class="col-md-4 srch-box">
              <div class="input-group">
                <input class="form-control border-1 rounded-0 border-dark" type="search" id="example-search-input"
                  placeholder="Search T.R. no.">
                <span class="input-group-append">
                  <button class="btn btn-outline-dark border-1 rounded-0" type="button">
                    <i class="fa fa-search"></i>
                  </button>
                </span>
              </div>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">T.R. No.</th>
                  <th scope="col">P.I. No.</th>
                  <th scope="col">Company</th>
                  <th scope="col">Date of Generation</th>
                  <th scope="col">Contact No.</th>
                  <th scope="col">Test Type</th>
                  <th scope="col">No Of Sample</th>
                  <th scope="col">Generate Invoice</th>
                </tr>
              </thead>
              <tbody>
                {{#each data}}
                <tr>
                  <td>{{trNumber}}</td>
                  <td>{{piNumber}}</td>
                  <td>{{companyName}}</td>
                  <td>{{trimString date}}</td>
                  <td>{{contact}}</td>
                  <td>
                    <ol>
                      {{#eachProperty testData}}
                      <li>{{value.testType}}</li>
                      {{/eachProperty }}
                    </ol>
                  </td>
                  <td>
                    <ul>
                      {{#eachProperty testData}}
                      <li>{{value.noOfSample}}</li>
                      {{/eachProperty }}
                    </ul>
                  </td>
                  <td><a href="/user/generateInvoiceFinancial?trNo={{trNumber}}"><button
                        class="btn btn-primary">Get Data</button></a></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">

              {{#if prev}}
              <li class="page-item">
                <a class="page-link" href="/user/getInvoiceRecords?page={{prev.page}}&limit={{prev.limit}}">Previous</a>
              </li>
              {{/if}}
              {{!-- <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li> --}}
              {{#if next}}
              <li class="page-item">
                <a class="page-link" href="/user/getInvoiceRecords?page={{next.page}}&limit={{next.limit}}">Next</a>
              </li>
              {{/if}}
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</body>

</html>