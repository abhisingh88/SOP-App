<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Reports</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
  <link rel="stylesheet" href="../css/style.css">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    {{!-- {{> navigation }} --}}

    {{> navbar userImg=data.userImage }}

    {{!-- {{> navigation }} --}}
    <div class="container-flex">
        <div class="row">
            <div class="col-2 p-0">
                {{> financialSidebar userImg=data.userImage }}
            </div>

            <div class="col-10 mx-0 mt-4 p-4">
                <div class="container-fluid my-4">
                    <h1 class="my-4">Generate Invoice List</h1>
                    <div class="row">
                        <div class="col-md-4 srch-box">
                            <div class="input-group">
                                <input class="form-control border-1 rounded-0 border-dark" type="search"
                                    id="example-search-input" placeholder="Search T.R. no.">
                                <span class="input-group-append">
                                    <button class="btn btn-outline-dark border-1 rounded-0" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <form action="/data/invoiceDetails" method="post" enctype='multipart/form-data'>

                        <input type="text" id="trNum" name="trNumber" value="{{data.trNumber}}">
                        <input type="hidden" id="counterVal" name="counter" value='{{data.counter}}'>

                        <input type="text" placeholder="Company Name" value="{{data.companyName}}" name="companyName"
                            id="comp" required>

                        <br>

                        {{#eachProperty data.piData.testData}}
                        <div id="testCollection">
                            <input type="text" placeholder="Test Type" value="{{value.testType}}" name="testType"
                                id="test" required>
                            <input type="text" placeholder="Number of Sample" value="{{value.noOfSample}}"
                                name="noOfSample" id="no" required>
                            <input type="text" placeholder="Cost" value="{{value.cost}}" name="cost" id="cost" required>
                        </div>
                        {{/eachProperty }}
                        <label for="">Total Cost</label>
                        <input type="text" value="{{data.piData.totalCost}}" name="totalCost">
                        <br>
                        <label for="">Advance Payment</label>
                        <input type="text" value="{{data.piData.advancePayment}}" name="advancePayment">
                        {{!-- <button type="submit" class="addbtn" id="testAddBtn"
                            onclick="add_TestField()">Add</button>
                        <button type="submit" class="rembtn" id="testRemBtn"
                            onclick="remove_TestField()">Remove</button>
                        <br> --}}
                        

                        <br>
                        <input type="date" placeholder="Date" name="date" id="date" required>
                        <br>
                        <select class="form-select form-select-sm" name="paymentStatus"
                            aria-label=".form-select-sm example">
                            <option disabled="disabled" selected>Payment Status</option>
                            <option value="notCompleted">Not Completed</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <br>
                        <label for="">Contact</label>
                        <input type="text" placeholder="Contact Persom" name="contact" value="{{data.contact}}"
                            id="contactPerson" required>

                        <br>

                        <div id="file-container">
                            <p id="filePdf"><i class="fas fa-file-upload"></i>Upload Invoice File</p>
                            <input id="fileUpload" type="file" name="invoicefile" placeholder="Upload Invoice File"
                                required capture />
                        </div>

                        <hr>

                        {{!-- <div id="file-container">
                            <p id="fileImage"><i class="fas fa-file-upload"></i>Upload Filled Form</p>
                        </div>
                        <input id="fileUpload" type="file" name="file" placeholder="Upload File" required capture>
                        <hr> --}}

                        <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#filePdf").click(function (e) {
            $("#fileUpload").click();
        });
        function fasterPreview(uploader) {
            if (uploader.files && uploader.files[0]) {
                $('#filePdf').attr('src',
                    window.URL.createObjectURL(uploader.files[0]));
            }
        }
        $("#fileUpload").change(function () {
            fasterPreview(this);
        });
    </script>
</body>

</html>