<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Request Form</title>


    {{!--
    <link rel="stylesheet" href="css/sidemenu.css">
    <link rel="stylesheet" href="css/new-user.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css"> --}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        var counter = document.getElementById("counterVal").value;
        let testData = []
        function add_TestField() {
            html = `<div><input type="text" placeholder="Test Type" name="testType" id="test${counter}" required>
              {{!-- <br> --}}
              <input type="text" placeholder="Number of Sample" name="noOfSample" id="no${counter}" required>
              <input type="text" placeholder="Cost" name="cost" id="cost" required>
              </div>`
            var testData = document.getElementById("testCollection")
            testData.innerHTML += html
            counter++;
            document.getElementById("counterVal").value = counter.toString();
        }

        function remove_TestField() {
            if (counter <= 1) {
                alert("Atleast One field is Compulsory")
            } else {
                var testData = document.getElementById("testCollection")
                testData.removeChild(testData.lastChild)
                counter--;
                document.getElementById("counterVal").value = counter.toString();
            }
        }


    </script>

</head>

<body>

    {{> navbar userImg=data.userImage }}



    <div class="container-flex">
        <div class="row">
            <div class="col-3">
                {{> financialSidebar userImg=data.userImage }}
            </div>

            <div class="col-9 mx-0">

                <form action="/data/updatePiDetails" method="post">
                    <h1>Proforma Invoice Form</h1>
                    <hr>

                    <input type="hidden" id="counterVal" name="counter" value='{{data.counter}}'>
                    <input type="text" id="piNumber" name="piNumber" readonly value='{{data.piNumber}}'>
                    <br>

                    <label for="companyName">companyName :</label>
                    <br>
                    <input type="text" placeholder="Company Name" value="{{data.companyName}}" name="companyName"
                        id="comp" required>
                    <br>

                    <label for="Contact">Contact :</label>
                    <br>
                    <input type="text" placeholder="Contact" value="{{data.contact}}" name="contact" id="contact"
                        required>

                    <br>

                    <label for="Contact">Test Data:</label>
                    <br>
                    {{#eachProperty data.testData}}
                    <div id="testCollection">
                        <input type="text" placeholder="Test Type" value="{{value.testType}}" name="testType" id="test"
                            required>
                        <input type="text" placeholder="Number of Sample" value="{{value.noOfSample}}" name="noOfSample"
                            id="no" required>
                        <input type="text" placeholder="Cost" value="{{value.cost}}" name="cost"
                            id="no" required>
                    </div>
                    {{/eachProperty }}

                    <button type="submit" class="addbtn" id="testAddBtn" onclick="add_TestField()">Add</button>
                    <button type="submit" class="rembtn" id="testRemBtn" onclick="remove_TestField()">Remove</button>
                    <br>

                    <input type="text" placeholder="Total Cost" name="totalCost" value="{{data.totalCost}}"
                        id="totalCost" required>
                    <br>

                    <input type="text" placeholder="Advance Payment" name="advancePayment" id="advancePayment">

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="poDoStatus" value="Yes" id="flexRadioDefault1" required>
                        <label class="form-check-label" for="flexRadioDefault1">
                            PO/DO Given
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="poDoStatus" value="No" id="flexRadioDefault2" checked
                            required>
                        <label class="form-check-label" for="flexRadioDefault2">
                            PO/DO Not Given
                        </label>
                    </div>

                    <select class="form-select form-select-sm" name="piStatus" aria-label=".form-select-sm example">
                        <option disabled="disabled" selected>Is PI Accepted</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>

                    <hr>

                    {{!-- <div id="file-container">
                        <p id="fileImage"><i class="fas fa-file-upload"></i>Upload Filled Form</p>
                    </div>
                    <input id="fileUpload" type="file" name="file" placeholder="Upload File" required capture>
                    <hr> --}}

                    <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        $("#fileImage").click(function (e) {
            $("#fileUpload").click();
        });
        function fasterPreview(uploader) {
            if (uploader.files && uploader.files[0]) {
                $('#fileImage').attr('src',
                    window.URL.createObjectURL(uploader.files[0]));
            }
        }
        $("#fileUpload").change(function () {
            fasterPreview(this);
        });
    </script>
</body>

</html>