  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> sidebar }}
      </div>
      <div class="col-9">
        <form action="">
          <div class="container">
            <h1>Proforma Invoice</h1>
            <hr>

            <input type="text" placeholder="TRF No." name="trf" id="trf" required>

            <input type="text" placeholder="Final Price" name="price" id="price" required>

            <hr>

            <div id="file-container">
              <p id="fileImage"><i class="fas fa-file-upload"></i>Upload Invoice</p>
            </div>
            <input id="fileUpload" type="file" name="file" placeholder="Upload File" required capture>
            <hr>

            <button type="submit" class="genbtn">Generate Proforma Invoice No.</button>
          </div>
        </form>

      </div>
    </div>
  </div>
  <script>
    $("#fileImage").click(function (e) {
      $("#fileUpload").click();
    });
    function fasterPreview(uploader) {
      if (uploader.files && uploader.files[0]) {
        $('#fileImage').attr('src',
          window.URL.createObjectURL(uploader.files[0]));
      }
    }
    $("#fileUpload").change(function () {
      fasterPreview(this);
    });
  </script>
</body>

