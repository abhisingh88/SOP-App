<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Authorize Reports</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
  <link rel="stylesheet" href="../css/style.css">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{> navbar }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-2 p-0">
        {{> directorSidebar }}
      </div>

      <div class="col-10 mx-0 mt-4 p-4">

        {{#if success}}


        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Thank You!!</strong> Final Report is Ready
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        {{/if}}

        <h1 class="my-4">Authorize Final Report</h1>
        <hr>
        <div class="row">
          <div class="col-md-4 srch-box">
            <div class="input-group">
              <input class="form-control border-1 rounded-0 border-dark" type="search" id="example-search-input"
                placeholder="Search Invoice no.">
              <span class="input-group-append">
                <button class="btn btn-outline-dark border-1 rounded-0" type="button">
                  <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Invoice No.</th>
                <th scope="col">Company</th>
                <th scope="col">Date</th>
                <th scope="col">Proforma Invoice</th>
                <th scope="col">Test Type</th>
                <th scope="col">No of samples</th>
                <th scope="col">Total Cost</th>
                <th scope="col">Contact</th>
                <th scope="col">View Report</th>
                <th scope="col">Payment Status</th>
                <th scope="col">Final Approval</th>
              </tr>
            </thead>
            <tbody>
              {{#each data}}
              <tr>
                <td>{{invoiceNumber}}</td>
                <td>{{companyName}}</td>
                <td>{{trimString date}}</td>
                <td>{{companyName}}</td>
                <td>
                  <ol>
                    {{#eachProperty testData}}
                    <li>{{value.testType}}</li>
                    {{/eachProperty }}
                  </ol>
                </td>
                <td>
                  <ul>
                    {{#eachProperty testData}}
                    <li>{{value.noOfSample}}</li>
                    {{/eachProperty }}
                  </ul>
                </td>
                <td>{{totalCost}}</td>
                <td>{{contact}}</td>
                <td><a href="http://localhost:3000/invoiceFiles/{{reportfile}}" target="_blank"><button
                      class="btn btn-primary">View Report</button></a></td>
                <td>{{paymentStatus}}</td>
                <td>
                  <a href="/user/finalApprovalPage?inNo={{invoiceNumber}}"><button class="btn btn-primary">Go To</button>
                  </a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>