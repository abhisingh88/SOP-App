  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}


  {{> navbar }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> sidebar }}
      </div>

      <div class="col-8 mx-0">

        {{#if success}}


        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Thank You!!</strong> We have Forwarded it to Lab Head
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        {{/if}}

        <h1 class="my-4">I.T. No. -: {{data.itNumber}}</h1>
        <hr>

        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">I.T. No.</th>
                <th scope="col">Company</th>
                <th scope="col">Date of Generation</th>
                <th scope="col">Contact Person</th>
                <th scope="col">Contact No.</th>
                <th scope="col">Submission to Lab Head</th>
                {{!-- <th scope="col">Forward to Lab Head</th> --}}
                {{!-- <th scope="col">Record Status</th> --}}
              </tr>
            </thead>
            <tbody>
              {{#if data}}
              <tr>
                <td>{{data.itNumber}}</td>
                <td>{{data.companyName}}</td>
                <td>{{ data.Reqdate}}</td>
                <td>{{data.personName}}</td>
                <td>{{data.contact}}</td>
                <td>{{data.submittedToLabHead}}</td>
                {{!-- <td><a href="/user/recptionToLabHead?itNo={{itNumber}}"><button
                      class="btn btn-primary">Forward</button></a></td> --}}
                {{!-- <td>Pending</td> --}}
              </tr>
              {{/if}}
            </tbody>
          </table>

          <a href="/user/updateItStatus?itNo={{data.itNumber}}"><button class="btn btn-primary">Forward</button></a>
        </div>
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-end">

            {{#if prev}}
            <li class="page-item">
              <a class="page-link" href="/data/itDetailsCount?page={{prev.page}}&limit={{prev.limit}}">Previous</a>
            </li>
            {{/if}}
            {{!-- <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li> --}}
            {{#if next}}
            <li class="page-item">
              <a class="page-link" href="/data/itDetailsCount?page={{next.page}}&limit={{next.limit}}">Next</a>
            </li>
            {{/if}}
          </ul>
        </nav>
      </div>
    </div>
  </div>
</body>

</html>