  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}

  {{> navbar userImg=data.userImage }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> labheadSidebar userImg=data.userImage }}
      </div>

      <div class="col-8 mx-0">

        {{#if success}}


        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Thank You!!</strong> We have Intilized the request for testing
          <h3>Your TR No is: {{tr}}</h3>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        {{/if}}

        <h1>Test Report List</h1>
        <hr>
        <div class="row">
          <div class="col-md-4 srch-box">
            <div class="input-group">
              <input class="form-control border-1 rounded-0 border-dark" type="search" id="example-search-input"
                placeholder="Search T.R. no.">
              <span class="input-group-append">
                <button class="btn btn-outline-dark border-1 rounded-0" type="button">
                  <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">T.R. No.</th>
                <th scope="col">Company Name</th>
                <th scope="col">Test Type</th>
                <th scope="col">No Of Sample</th>
                <th scope="col">Company Contact</th>
                <th scope="col">Date Generated</th>
                <th scope="col">Allocation Status</th>
                </tr>
            </thead>
            <tbody>
              {{#if data}}
              <tr>
                <td>{{data.trNumber}}</td>
                <td>{{data.companyName}}</td>
                <td>
                  <ol>
                    {{#eachProperty data.testData}}
                      <li>{{value.testType}}</li>
                    {{/eachProperty }}
                  </ol>
                </td>
                <td>
                  <ul>
                    {{#eachProperty data.testData}}
                      <li>{{value.noOfSample}}</li>
                    {{/eachProperty }}
                  </ul>
                </td>
                <td>{{data.contact}}</td>
                <td>{{trimString data.date}}</td>
                <td>Allocated</td>
              </tr>
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>