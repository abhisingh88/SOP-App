  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>

  {{> navbar userImg=data.userImage }}

  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> labheadSidebar userImg=data.userImage }}
      </div>

      <div class="col-8 mx-0">


          <div class="container">
            <h1>Send to Director/Re-Test</h1>
            <hr>

            <div id="file-container">
              <p id="fileImage"><i class="fas fa-file-download"></i></p>
              <a href="http://localhost:3000/trDocs/{{data.filename}}" target="_blank"><button
                      class="btn btn-primary">View Report</button></a>
            </div>

            <hr>
            <div>
            <form action="/user/retestToLabTester" method="post">
              <input type="hidden" name="trNo" value="{{data.trNumber}}">
              <textarea rows="10" class="textbox" name="suggestion" placeholder="Suggest Errors or Improvements"></textarea>
              <br>
              <button type="submit" class="retestbtn">Re-Test</button>
            </form>
            </div>
            <div class="my-4">
            <form action="/user/sendToDiretor" method="post">
                <input type="hidden" name="trNo" value="{{data.trNumber}}">
                <button type="submit" class="apprbtn">Send to The Director</button>
            </form>
            </div>
          </div>
      </div>
    </div>
  </div>

</body>

</html>