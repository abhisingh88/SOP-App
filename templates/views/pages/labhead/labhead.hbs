  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}

  {{> navbar userImg=data.userImage }}



  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> sidebar userImg=data.userImage }}
      </div>

      <div class="col-9">
        <form action="/data/trDetails" method="post">
          <div class="container">
            <h1>Test Request Form</h1>
            <hr>

            <input type="hidden" id="itNum" name="itNumber" value="{{data.itNumber}}">
            <input type="text" placeholder="Company Name" value="{{data.companyName}}" name="companyName" id="comp"
              required>

            <br>

            <input type="text" placeholder="Test Type" name="testType" id="test" required>

            <br>

            <input type="number" placeholder="Number of Sample" name="noOfSample" id="no" required>
            {{!-- <button type="submit" class="addbtn">Add</button> --}}
            <br>


            <input type="date" placeholder="Date" name="date" id="date" required>
            <br>

            <input type="text" placeholder="Received By" name="receivedBy" id="rcvd" required>
            <br>
            <input type="text" placeholder="Contact Persom" name="contact" value="{{data.contact}}" id="contactPerson" required>


            <hr>

            {{!-- <div id="file-container">
              <p id="fileImage"><i class="fas fa-file-upload"></i>Upload Filled Form</p>
            </div>
            <input id="fileUpload" type="file" name="file" placeholder="Upload File" required capture>
            <hr> --}}

            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    $("#fileImage").click(function (e) {
      $("#fileUpload").click();
    });
    function fasterPreview(uploader) {
      if (uploader.files && uploader.files[0]) {
        $('#fileImage').attr('src',
          window.URL.createObjectURL(uploader.files[0]));
      }
    }
    $("#fileUpload").change(function () {
      fasterPreview(this);
    });
  </script>
</body>

</html>