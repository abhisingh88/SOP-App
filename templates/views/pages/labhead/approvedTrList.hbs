<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Test Reports</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
  <link rel="stylesheet" href="../css/style.css">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}

  {{> navbar userImg=data.userImage }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-2 p-0">
        {{> labheadSidebar userImg=data.userImage }}
      </div>

      <div class="col-10 mx-0 mt-4 p-4">

        {{#if success}}


        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Thank You!!</strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        {{/if}}

        <h1 class="my-4">Approved Test Report List</h1>
        <hr>
        
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">T.R. No.</th>
                <th scope="col">Company Name</th>
                <th scope="col">Test Type</th>
                <th scope="col">No Of Sample</th>
                <th scope="col">Company Contact</th>
                <th scope="col">Date Generated</th>
                <th scope="col">View Report</th>
                <th scope="col">Remark From Director</th>
                <th scope="col">Comment From Lab Tester</th>
              </tr>
            </thead>
            <tbody>
              {{#each data}}
              <tr>
                <td>{{trNumber}}</td>
                <td>{{companyName}}</td>
                <td>
                  <ol>
                    {{#eachProperty testData}}
                    <li>{{value.testType}}</li>
                    {{/eachProperty }}
                  </ol>
                </td>
                <td>
                  <ul>
                    {{#eachProperty testData}}
                    <li>{{value.noOfSample}}</li>
                    {{/eachProperty }}
                  </ul>
                </td>
                <td>{{contact}}</td>
                <td>{{trimString date}}</td>
                <td><a href="http://localhost:3000/trDocs/{{filename}}" target="_blank"><button
                      class="btn btn-primary">View Report</button></a>
                </td>                
                <td>{{remark}}</td>
                <td>{{commentFromTester}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>

        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-end">

            {{#if prev}}
            <li class="page-item">
              <a class="page-link" href="/user/approvedTestReportList?page={{prev.page}}&limit={{prev.limit}}">Previous</a>
            </li>
            {{/if}}
            {{!-- <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li> --}}
            {{#if next}}
            <li class="page-item">
              <a class="page-link" href="/user/approvedTestReportList?page={{next.page}}&limit={{next.limit}}">Next</a>
            </li>
            {{/if}}
          </ul>
        </nav>

      </div>
    </div>
  </div>
</body>

</html>