  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}


  {{> navbar }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> receptionSidebar }}
      </div>

      <div class="col-8 mx-0">
        <h1 class="my-4">I.T. No. Records</h1>
        <hr>
        <div class="row">
          <div class="col-md-4 srch-box">
            <div class="input-group">
              <input class="form-control border-1 rounded-0 border-dark" type="search" id="example-search-input"
                placeholder="Search I.T. no.">
              <span class="input-group-append">
                <button class="btn btn-outline-dark border-1 rounded-0" type="button">
                  <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
          </div>
        </div>


        <form action="/user/getItDataStatus" method="get">
            <input type="text" name="itNo" />
            <button type="submit">Get Data</button>

        </form>

        <div class="table-responsive my-3">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">I.T. No.</th>
                <th scope="col">Company</th>
                <th scope="col">Date of Generation</th>
                <th scope="col">Contact Person</th>
                <th scope="col">Contact No.</th>
                <th scope="col">Submitted To Financial</th>
                <th scope="col">Submission for PI</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                {{#if data}}
                    <td>{{data.itNumber}}</td>
                    <td>{{data.companyName}}</td>
                    <td>{{trimString data.Reqdate}}</td>
                    <td>{{data.personName}}</td>
                    <td>{{data.contact}}</td>
                    <td>{{data.submittedToLabHead}}</td>
                    <td>{{data.statusOfPi}}</td>
                {{/if}}
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>