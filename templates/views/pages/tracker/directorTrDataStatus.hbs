<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IT Records</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
  <link rel="stylesheet" href="../css/style.css">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}


  {{> navbar }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-2 p-0">
        {{> directorSidebar }}
      </div>

      <div class="col-10 mx-0 mt-4 p-4">
        <h1 class="my-4">T.R. No. Records</h1>
        <hr>
        
        <form action="/user/getDirectorTrDataStatus" method="get">
          <input type="text" class="col-md-4" name="trNo" />
          <button type="submit" class="btn btn-outline-success">Get Data</button>

        </form>

        <div class="table-responsive my-3">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">T.R. No.</th>
                <th scope="col">Company</th>
                <th scope="col">Date of Generation</th>
                <th scope="col">Contact No.</th>
                <th scope="col">Test Type</th>
                <th scope="col">No Of Sample</th>
                <th scope="col">Recieved By</th>
                <th scope="col">Is Authorized</th>
                <th scope="col">Is Invoice Generated</th>
                <th scope="col">Report File</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                {{#if data}}
                <td>{{data.trNumber}}</td>
                <td>{{data.companyName}}</td>
                <td>{{trimString data.date}}</td>
                <td>{{data.contact}}</td>
                <td>
                  <ol>
                    {{#eachProperty data.testData}}
                    <li>{{value.testType}}</li>
                    {{/eachProperty }}
                  </ol>
                </td>
                <td>
                  <ul>
                    {{#eachProperty data.testData}}
                    <li>{{value.noOfSample}}</li>
                    {{/eachProperty }}
                  </ul>
                </td>
                <td>{{data.receivedBy}}</td>
                <td>{{data.isAuthorized}}</td>
                <td>{{data.isInvoiceGen}}</td>
                 <td><a href="http://localhost:3000/trDocs/{{data.filename}}" target="_blank"><button
                      class="btn btn-primary">View Report</button></a>
                </td>
                {{/if}}
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>