  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  {{!-- {{> navigation }} --}}


  {{> navbar }}

  {{!-- {{> navigation }} --}}
  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> financialSidebar userImg=data.userImage }}
      </div>

      <div class="col-8 mx-0">
        <h1 class="my-4">Invoice Record</h1>
        <hr>
        <div class="row">
          <div class="col-md-4 srch-box">
            <div class="input-group">
              <input class="form-control border-1 rounded-0 border-dark" type="search" id="example-search-input"
                placeholder="Search I.T. no.">
              <span class="input-group-append">
                <button class="btn btn-outline-dark border-1 rounded-0" type="button">
                  <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
          </div>
        </div>


        <form action="/user/getInvoiceDataStatus" method="get">
          <input type="text" name="inNo" />
          <button type="submit">Get Data</button>

        </form>

        <div class="table-responsive my-3">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Invoice No.</th>
                <th scope="col">Company</th>
                <th scope="col">Date of Generation</th>
                <th scope="col">Test Type</th>
                <th scope="col">No Of Sample</th>
                <th scope="col">Contact No.</th>
                <th scope="col">Total Cost</th>
                <th scope="col">Payment Status</th>
                <th scope="col">Report File</th>

              </tr>
            </thead>
            <tbody>
              <tr>
                {{#if data}}
                <td>{{data.invoiceNumber}}</td>
                <td>{{data.companyName}}</td>
                <td>{{trimString data.date}}</td>
                <td>
                  <ol>
                    {{#eachProperty data.testData}}
                    <li>{{value.testType}}</li>
                    {{/eachProperty }}
                  </ol>
                </td>
                <td>
                  <ul>
                    {{#eachProperty data.testData}}
                    <li>{{value.noOfSample}}</li>
                    {{/eachProperty }}
                  </ul>
                </td>
                <td>{{data.contact}}</td>
                <td>{{data.totalCost}}</td>
                <td>{{data.paymentStatus}}</td>
                <td><a href="http://localhost:3000/invoiceFiles/{{data.reportfile}}" target="_blank"><button
                      class="btn btn-primary">View Report</button></a></td>
                {{/if}}
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>