  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>

  {{> navbar }}

  <div class="container-flex">
    <div class="row">
      <div class="col-3">
        {{> testerSidebar userImg=data.userImage }}
      </div>

      <div class="col-9 mx-0">
        <h1>Test Report List</h1>
        <hr>
        <div class="row">
          <div class="col-md-4 srch-box">
            <div class="input-group">
              <input class="form-control border-1 rounded-0 border-dark" type="search" id="example-search-input"
                placeholder="Search T.R. no.">
              <span class="input-group-append">
                <button class="btn btn-outline-dark border-1 rounded-0" type="button">
                  <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">T.R. No.</th>
                <th scope="col">Company</th>
                <th scope="col">Test Type</th>
                <th scope="col">No Of Sample</th>
                <th scope="col">Contact No</th>
                <th scope="col">Allocation Date</th>
                <th scope="col">Submit Report</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>

              {{#each data}}
              <tr>
                <td>{{trNumber}}</td>
                <td>{{companyName}}</td>
                <td>
                  <ol>
                    {{#eachProperty testData}}
                      <li>{{value.testType}}</li>
                    {{/eachProperty }}
                  </ol>
                </td>
                <td>
                  <ul>
                    {{#eachProperty testData}}
                      <li>{{value.noOfSample}}</li>
                    {{/eachProperty }}
                  </ul>
                </td>
                <td>{{contact}}</td>
                <td>{{trimString date}}</td>
                {{#eq status "null"}}
                  <td><a href="/user/testViewSubmission?trNo={{trNumber}}"><button
                      class="btn btn-primary">Upload Test Report</button></a>
                  </td>
                {{/eq}}
                {{#ifnoteq status "null"}}
                  <td><a href="/user/testViewSubmission?trNo={{trNumber}}"><button
                      class="btn btn-primary">Update Test Report</button></a>
                  </td>
                {{/ifnoteq}}
                {{#if status}}
                  <td>{{status}}</td>
                {{else}}
                  <td>Pending</td>
                {{/if}}
                
                {{!-- <td>{{submittedToLabHead}}</td> --}}
              </tr>
              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>