<body>
    <div class="container p-0 mt-md-5 col-xs-12 col-md-8 shadow-lg">
        <div class="display-3 m-0 p-4 text-center" style="background-color: #c4c4c4;">Welcome Back!</div>
        <div class="logform m-0 p-5 text-center">
            <form action="/user/login" method="post">
                <!-- Email input -->
                <div class="form-outline mb-4 text-center">
                    <label class="form-label h3 fw-lighter" for="form2Example1">Username</label>
                    <input type="email" id="form2Example1" name="email" class="form-control border-dark rounded-0">
                </div>
    
                <!-- Password input -->
                <div class="form-outline mb-4 text-center">
                    <label class="form-label h3 fw-lighter" for="form2Example2">Password</label>
                    <div class="input-group">
                        <input type="password" id="form2Example2" name="password" class="form-control border-dark rounded-0">
                        <!-- <span class="input-group-text"><i class="bi bi-eye-slash fs-4" id="togglePassword"></i></span> -->
                    </div>
                </div>
    
                <!-- Submit button -->
                <button type="submit" class="btn rounded-0 btn-light border-dark mt-4 col-md-4 fs-5 fw-light">Sign in</button>
            </form>
        </div>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
